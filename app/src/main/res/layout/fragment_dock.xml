<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_send"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_dock"
        android:text="@string/button_send_text"
        android:textSize="@dimen/size_text_dock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_history" />

    <Button
        android:id="@+id/button_history"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_dock"
        android:text="@string/button_history_text"
        android:textSize="@dimen/size_text_dock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_info"
        app:layout_constraintStart_toEndOf="@+id/button_send"
        app:layout_constraintTop_toTopOf="@id/button_info" />

    <Button
        android:id="@+id/button_info"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_dock"
        android:text="@string/button_info_text"
        android:textSize="@dimen/size_text_dock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_history"
        app:layout_constraintTop_toTopOf="@id/button_send" />

</androidx.constraintlayout.widget.ConstraintLayout>